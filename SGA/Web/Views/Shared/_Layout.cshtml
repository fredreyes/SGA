<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Colegio Buen Samaritano</title>
    <link href="~/Content/materialize.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
</head>
<body>
    <ul id="slide-out" class="side-nav fixed">
        <li>
            <div class="user-view">
                <div class="background">
                    <img src="~/Content/Iconos/pexels-photo-370799.jpeg" />
                </div>
                <a class="center" href="#!user"><img class="circle" src="~/Content/Iconos/student.png"></a>
                <a href="#!name"><span class="white-text name">@Session["Name"].ToString()</span></a>
                <a href="#!email"><span class="white-text email">@Session["MATRICULA"].ToString()</span></a>
            </div>
        </li>
        <li><a href="#!"><i class="material-icons">home</i>Inicio</a></li>
        <li><a href="@Url.Action("Historial","Calificaciones")"><i class="material-icons">class</i>Historial</a></li>
        <li><a href="@Url.Action("Index","Calificaciones")"><i class="material-icons">description</i>Calificaciones</a></li>
        <li><div class="divider"></div></li>
        <li><a  href=@Url.Action("Salir","Login")><i class="material-icons">reply</i>Cerrar Sesión</a></li>
    </ul>
    <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema Gestión Academica</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".button-collapse").sideNav();
        })
    </script>
</body>
</html>