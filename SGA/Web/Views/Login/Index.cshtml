@model Entidades.ELogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div id="Login-Div">
            @using (Html.BeginForm("Autorizar", "Login", FormMethod.Post))
            {
                <div class="row">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.UserID, new { @class = "form-control", @placeholder = "UserID" })
                        @Html.ValidationMessageFor(x => x.UserID)
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-success center"><i class="fa fa-sign-in"></i>Entrar</button>
                    </div>

                    <div>
                        <span class="field-validation-error">
                            @Html.DisplayFor(x => x.ERROR_MENSAJE)
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
